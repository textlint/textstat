{
  "name": "textstat",
  "version": "1.0.0",
  "description": "textstat is statistic engine for text documents.",
  "keywords": [
    "textlint",
    "textstat"
  ],
  "homepage": "https://github.com/textlint/textstat/tree/master/packages/textstat/",
  "bugs": {
    "url": "https://github.com/textlint/textstat/issues"
  },
  "license": "MIT",
  "author": "azu",
  "files": [
    "bin/",
    "lib/",
    "src/"
  ],
  "main": "lib/textstat.js",
  "types": "lib/textstat.d.ts",
  "directories": {
    "lib": "lib",
    "test": "test"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/textlint/textstat.git"
  },
  "scripts": {
    "build": "cross-env NODE_ENV=production tsc -p .",
    "clean": "rimraf lib/",
    "prepublish": "npm run --if-present build",
    "test": "mocha \"test/**/*.ts\"",
    "prettier": "prettier --write \"**/*.{js,jsx,ts,tsx,css}\"",
    "watch": "tsc -p . --watch"
  },
  "prettier": {
    "printWidth": 120,
    "singleQuote": false,
    "tabWidth": 4
  },
  "dependencies": {
    "glob": "^7.1.3",
    "json2csv":  "^4.2.1",
    "lodash.uniq":  "^4.5.0",
    "@types/lodash.uniq":  "^4.5.0",
    "@types/json2csv":  "^4.2.0",
    "@textstat/kernel": "^1.0.0",
    "@textstat/rule-context": "^1.0.0",
    "@textstat/textstat-rule-preset-standard": "^1.0.0",
    "common-path-prefix": "^1.0.0"
  },
  "devDependencies": {
    "@types/mocha": "^5.2.5",
    "@types/node": "^10.12.1",
    "cross-env": "^5.2.0",
    "mocha": "^5.2.0",
    "prettier": "^1.8.1",
    "rimraf": "^2.6.2",
    "ts-node": "^7.0.1",
    "ts-node-test-register": "^4.0.0",
    "typescript": "^3.1.5"
  }
}
